{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node LTS (22)",
    "_version": "22.0.0",
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2023", "dom"],
        "allowJs": false,
        "module": "node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules"],
    "extends": "./tsconfig.paths.json"
}
